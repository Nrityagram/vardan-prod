			<script type="text/javascript">
				const scrollBelowFold = document.getElementById("scroll-below-fold")
				const belowFold = document.getElementById("below-fold")
				if (scrollBelowFold && belowFold) {
					scrollBelowFold.addEventListener("click", () => {
						belowFold.scrollIntoView({behavior: "smooth", block: "start"});
					});
				}

				function isVisible(elem) {
					return (window.getComputedStyle(elem).display !== "none")
				}

				function isPortrait() {
					if (screen.orientation && screen.orientation.type) {
						return screen
							.orientation
							.type
							.startsWith("portrait");
					} else {
						// Fallback for older browsers
						return window.innerWidth < window.innerHeight;
					}
				}

				const viewportHt = window.visualViewport.height
				const bannerTaglineElemList = document.querySelectorAll(".banner-tagline")
				const bannerImgCreditElemList = document.querySelectorAll(".banner-image-credit")
				const redBandCTAList = document.querySelectorAll(".cta-mobile")
				const isCTAMobileVisible = redBandCTAList && (redBandCTAList.length > 0) && isVisible(redBandCTAList.item(0))

				// If .cta-mobile selectors are visible
				if (isCTAMobileVisible) {
					// Utility Functions to adjust CTA red band width for different mobile user agents
					const ua = navigator
						.userAgent
						.toLowerCase()
					const isAndroid = ua.includes('android') || ua.includes('linux')
					const isIPhone = ua.includes('iphone')
					// ipad's user agent only mentions macintosh
					const isIPad = ua.includes('macintosh')
					const isIPadMini = ua.includes('ipad')

					const redBandCTAFirstItem = redBandCTAList.item(0)
					const redBandCTAFirstItemStyle = window.getComputedStyle(redBandCTAFirstItem)

					const vanillaSlideList = document.querySelectorAll(".vanilla-slide")
					const bannerContainer = document.querySelector("#banner-container")

					// make the CTA red band not too thick on various phone models
					if (isAndroid) {
						vanillaSlideList.forEach((elem) => {
							elem.style.height = "98.2vh"
						})
						bannerContainer.style.minHeight = "98.2vh"
					}

					if (isIPhone) {
						vanillaSlideList.forEach((elem) => {
							elem.style.height = "107dvh"
						})
						bannerContainer.style.minHeight = "107dvh"
					}

					if (isIPad) {
						vanillaSlideList.forEach((elem) => {
							elem.style.height = "93dvh"
						})
						bannerContainer.style.minHeight = "93dvh"
						bannerContainer.style.marginBottom = "8dvh"
					}

					if (isIPadMini) {
						vanillaSlideList.forEach((elem) => {
							elem.style.height = "100dvh"
						})
						bannerContainer.style.minHeight = "100dvh"
					}

					if (isAndroid || isIPhone || isIPad || isIPadMini) {
						const gapFromBottomSml = viewportHt * 0.03 // 2vh

						const redBandCTA_topY = redBandCTAFirstItem
							.getBoundingClientRect()
							.top
						const redBandCTA_botY = redBandCTAFirstItem
							.getBoundingClientRect()
							.bottom
						const redBandCTA_botPadding = redBandCTA_botY - viewportHt

						// CTA is present and isIPhone is true, banner tagline sits atop the redband with padding of 10px
						bannerTaglineElemList.forEach((elem) => {
							elem.style.paddingBottom = "18px"
						})

						redBandCTAList.forEach((elem) => {
							elem.style.paddingBottom = redBandCTA_botPadding.toString() + "px"
						})

						const newRedBandCTA_ht = redBandCTAFirstItem
							.getBoundingClientRect()
							.bottom - redBandCTAFirstItem
							.getBoundingClientRect()
							.top;

						bannerImgCreditElemList.forEach((elem) => {
							elem.style.bottom = (newRedBandCTA_ht + gapFromBottomSml).toString() + "px"
						})

						// icons sidebar
						const sidebarElem = document.querySelector('sidebar')
						if (window.getComputedStyle(sidebarElem).flexDirection == "column") {
							sidebarElem.style.bottom = (newRedBandCTA_ht + gapFromBottomSml).toString() + "px"
						}

					}

				}

				function isSearchBarAtBottom() {
					const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent)
					if (!isIOS) 
						return false

					const vh = window.innerHeight
					const visualVh = window.visualViewport.height

					alert("vh=" + vh + " | visualVh = " + visualVh)

					return visualVh < vh
				}
			</script>

